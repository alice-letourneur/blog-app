<div class="form">
  <%= render "shared/errors", obj: @category %>
  <div class="row">
    <div class="xs-12-col">
      <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-default" %>
        </div>
      </div>
      <% end %>
      <div class="center">
        [<%= link_to "Cancel and return to the list of categories", categories_path %>]
      </div>
    </div>
  </div>
</div>
